{% extends 'base.html.twig' %}

{% block title %}Liste des personnes{% endblock %}

{% block body %}
    <div class="flex justify-between items-center mb-6 border-b pb-4 border-gray-200">
        <h1 class="text-2xl font-bold text-gray-700">Annuaire</h1>
        <a href="{{ path('app_personne_new') }}" class="bg-indigo-600 hover:bg-indigo-700 text-black py-2 px-4 rounded shadow-sm text-sm transition-colors">
            + Ajouter
        </a>
    </div>

    <div class="bg-white rounded-lg shadow-sm border border-gray-100 overflow-hidden">
        <table class="w-full text-left text-sm">
            <thead class="bg-gray-100 text-gray-600 uppercase text-xs font-semibold">
                <tr>
                    <th class="px-6 py-3">Id</th>
                    <th class="px-6 py-3">Nom</th>
                    <th class="px-6 py-3">Prénom</th>
                    <th class="px-6 py-3">Date de naissance</th>
                    <th class="px-6 py-3">Métier</th>
                    <th class="px-6 py-3 text-right">Actions</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-100">
            {% for person in people %}
                <tr class="hover:bg-gray-50 transition-colors">
                    <td class="px-6 py-4 text-gray-500 font-mono text-xs">{{ person.id }}</td>
                    <td class="px-6 py-4 font-medium">{{ person.Nom }}</td>
                    <td class="px-6 py-4">{{ person.Prenom }}</td>
                    <td class="px-6 py-4 text-gray-600">{{ person.dateDeNaissance ? person.dateDeNaissance|date('d/m/Y') : '-' }}</td>
                    <td class="px-6 py-4">
                        <span class="inline-block bg-blue-100 text-blue-800 text-xs px-2 py-1 rounded-full">{{ person.metier }}</span>
                    </td>
                    <td class="px-6 py-4 text-right space-x-2">
                        <a href="{{ path('app_personne_show', {'id': person.id}) }}" class="text-indigo-600 hover:underline">Voir</a>
                        <a href="{{ path('app_personne_edit', {'id': person.id}) }}" class="text-amber-600 hover:underline">Editer</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6" class="px-6 py-8 text-center text-gray-500 italic">
                        Aucune personne enregistrée pour le moment.
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
