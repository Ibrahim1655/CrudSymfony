<form method="post" action="{{ path('app_personne_delete', {'id': person.id}) }}" onsubmit="return confirm('Voulez-vous vraiment supprimer cette fiche ?');" class="inline-block">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ person.id) }}">
    <button class="text-red-500 hover:text-red-700 font-medium text-sm">
        Supprimer
    </button>
</form>
