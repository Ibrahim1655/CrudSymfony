{% extends 'base.html.twig' %}

{% block title %}Détails Personne{% endblock %}

{% block body %}
    <div class="max-w-2xl mx-auto">
        <div class="mb-6">
            <a href="{{ path('app_personne_index') }}" class="text-sm text-gray-500 hover:text-indigo-600 transition-colors">
                &larr; Retour à la liste
            </a>
        </div>

        <div class="bg-white shadow rounded-lg border border-gray-100 p-6 mb-6">
            <div class="flex justify-between items-start mb-6 border-b border-gray-100 pb-4">
                <h1 class="text-2xl font-bold text-gray-800">
                    {{ person.Prenom }} {{ person.Nom }}
                </h1>
                <span class="bg-gray-100 text-gray-600 text-xs px-2 py-1 rounded">ID: {{ person.id }}</span>
            </div>

            <div class="grid grid-cols-1 gap-y-4">
                <div class="grid grid-cols-3 gap-4">
                    <span class="text-gray-500 font-medium text-sm">Métier</span>
                    <span class="col-span-2 text-gray-800">{{ person.metier }}</span>
                </div>
                
                <div class="grid grid-cols-3 gap-4">
                    <span class="text-gray-500 font-medium text-sm">Date de naissance</span>
                    <span class="col-span-2 text-gray-800">
                        {{ person.dateDeNaissance ? person.dateDeNaissance|date('d F Y') : 'Non renseignée' }}
                    </span>
                </div>
            </div>
        </div>

        <div class="flex items-center justify-end gap-4">
            <a href="{{ path('app_personne_edit', {'id': person.id}) }}" class="text-indigo-600 hover:text-indigo-800 font-medium">
                Modifier
            </a>
            {{ include('person/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
